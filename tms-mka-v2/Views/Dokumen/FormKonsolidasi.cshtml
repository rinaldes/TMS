@using tms_mka_v2.Models;

@model tms_mka_v2.Models.Dokumen
@{
    //ViewBag.Title = "Edit Dokumen";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
    string backLink = Url.Action("IndexKonsolidasi", new { caller = ViewBag.caller });
}
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-dark sbold uppercase">@ViewBag.Title</span>
        </div>
    </div>
    <div class="portlet-body form">
        @using (@Html.BeginForm(currentAction, currentController, FormMethod.Post, new { @class = "form-horizontal form-label-left input_mask", @id = "formsubmit" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <input type="hidden" name="caller" value="@ViewBag.caller" />
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption font-green-sharp">
                        <span class="caption-subject"> Basic Info</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="PartialSo" class="row">
                        <input type='hidden' value='@ViewBag.SO.TanggalMuat.ToString("MM/dd/yyyy")' id='tglmuatbuatuang'>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3"> Tanggal Proses</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.TanggalProses.ToShortDateString()</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> NO SO</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.SONumber</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> NO KSO</label>
                                <label class="control-label col-md-9">: @Model.SONumber</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Kode Supplier</label>
                                <label class="control-label col-md-9">: @ViewBag.Supplier.CustomerCodeOld</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Nama Supplier</label>
                                <label class="control-label col-md-9">: @ViewBag.Supplier.CustomerNama</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Nama Customer</label>
                                <label class="control-label col-md-9">: @ViewBag.Customer.Nama</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Kode Tagihan Atas Nama</label>
                                <label class="control-label col-md-9">: @ViewBag.Tagihan.CustomerCodeOld</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Tagihan Atas Nama</label>
                                <label class="control-label col-md-9">: @ViewBag.Tagihan.CustomerNama</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Keterangan Batal Truk</label>
                                <label class="control-label col-md-9">: @ViewBag.KeteranganBatalTruk</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Keterangan Revisi Rute</label>
                                <label class="control-label col-md-9">: @ViewBag.KeteranganRevisiRute</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Keterangan Revisi Tanggal</label>
                                <label class="control-label col-md-9">: @ViewBag.KeteranganRevisiTanggal</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Keterangan Revisi Jenis Truk</label>
                                <label class="control-label col-md-9">: @ViewBag.KeteranganRevisiJenisTruk</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Keterangan Revisi Tanggal BP</label>
                                <label class="control-label col-md-9">: @ViewBag.KeteranganRevisiTanggalBP</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3"> Tanggal Muat</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.TanggalMuat.ToShortDateString()  @ViewBag.SO.JamMuat.ToString()</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Jenis Truk</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.JenisTrucks.StrJenisTruck</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Vehicle No</label>
                                <label class="control-label col-md-9">: @ViewBag.VehicleNo</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Rute</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.StrDaftarHargaItem</label>
                            </div>
                            <br />
                            <div class="form-group">
                                <label class="control-label col-md-3"> ID Driver</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.Driver1.KodeDriver</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3"> Nama</label>
                                <label class="control-label col-md-9">: @ViewBag.SO.Driver1.NamaDriver</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.strDokumen)
                <div id="GridDokumen"></div>
            </div>
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption font-green-sharp">
                        <span class="caption-subject"> History</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="GridHistory"></div>
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <button type="submit" name="btnSubmit" value="Submit" onclick="valBtn = 'Submit'" class="btn btn-success">Save</button>
                @{
            if (ViewBag.caller == "admin")
            {
                <button type="submit" name="btnSubmit" value="Kirim" onclick="valBtn = 'Kirim'" class="btn btn-success">Submit</button>
            }
            else if (ViewBag.caller == "billing")
            {
                <button type="submit" name="btnSubmit" value="Terima" onclick="valBtn = 'Terima'" class="btn btn-success">Terima</button>
            }
                }
                <a href="@backLink" class="btn btn-link">Cancel</a>

            </div>
        }
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var dsDokumen = [];
        var dsHistory = [];
        var gridDokumen;
        var valBtn;
        @foreach (var item in Model.ListDokumen)
	    {
        <text>
        dsDokumen.push({
            Id : @item.Id,
            IdCustomer : @item.IdCustomer,
            IdBilling : @item.IdBilling,
            Nama : '@item.Nama',
            Jml : @item.Jml,
            Warna : '@item.Warna',
            Stempel : @item.Stempel.ToString().ToLower(),
            Lengkap : @item.Lengkap.ToString().ToLower(),
            KeteranganAdmin : '@item.KeteranganAdmin',
            KeteranganBilling : '@item.KeteranganBilling',
            IsEdit : false,
        });
        </text>
	    }
        @foreach (var item in Model.ListHistory)
        {
            <text>
        dsHistory.push({
            Id : @item.Id,
            Nama : '@item.Nama',
            Jml : @item.Jml,
            Warna : '@item.Warna',
            Stempel : @item.Stempel.ToString().ToLower(),
            Lengkap : @item.Lengkap.ToString().ToLower(),
            KeteranganAdmin : '@item.KeteranganAdmin',
            KeteranganBilling : '@item.KeteranganBilling',
            Tanggal : '@item.Tanggal'
        });
        </text>
        }

        $(document).ready(function () {
            gridDokumen = $("#GridDokumen").kendoGrid({
                dataSource: {
                    data: dsDokumen,
                    batch: true,
                    schema: {
                        model: {
                            fields: {
                                Id : { type: "number", editable: false },
                                IdCustomer : { type: "number", editable: false },
                                IdBilling : { type: "number", editable: false },
                                Nama : { type: "string", editable: false },
                                Jml : { type: "number", editable: false },
                                Warna : { type: "string", editable: false },
                                Stempel : { type: "boolean", editable: false },
                                Lengkap : { type: "boolean" },
                                @{
            if (ViewBag.caller == "admin")
            {
                <text>
                                KeteranganAdmin : { type: "string" },
                                KeteranganBilling : { type: "string" , editable: false},
                                </text>
            }
            else if (ViewBag.caller == "billing")
            {
                <text>
                                KeteranganAdmin : { type: "string" , editable: false},
                                KeteranganBilling : { type: "string" },
                                </text>
            }
                                }
                                IsEdit : { type: "boolean" },
                            }
                        }
                    },
                    change: function(e){
                        if (e.action == "itemchange"){
                            var model = e.items[0];
                            dummyData = jQuery.grep(dsDokumen, function( DataModel ) {
                                return DataModel.Id == model.Id;
                            });
                            if(dummyData[0].Lengkap == model.Lengkap && dummyData[0].KeteranganAdmin == model.KeteranganAdmin && dummyData[0].KeteranganBilling == model.KeteranganBilling)
                            {
                                model.IsEdit = false;
                            }
                            else
                            {
                                model.IsEdit = true;
                            }
                        }
                    },
                },
                resizable: true,
                editable: true,
                columns: [
                    { field: "Nama", title: "Nama"},
                    { field: "Jml", title: "Jumlah"},
                    { field: "Warna", title: "Warna"},
                    { field: "Stempel", title: "Stempel", template:"#= Stempel ? 'Ya' : 'Tidak' #"},
                    { title: "Lengkap", template: '<input type="checkbox" #= Lengkap ? \'checked="checked"\' : "" # class="chkbx" />', width: 110 },
                    //{ field: "Lengkap", title: "Lengkap", template: '<input type="checkbox" #= Lengkap ? "checked=checked" : "" #" ></input>'},
                    //{ field: "Lengkap", title: "Lengkap", template:"#= Lengkap ? 'Ya' : 'Tidak' #"},
                    { field: "KeteranganAdmin", title: "Keterangan Admin"},
                    { field: "KeteranganBilling", title: "Keterangan Billing"},
                ],
            }).data("kendoGrid");

            $("#GridDokumen .k-grid-content").on("change", "input.chkbx", function(e) {
                console.log('a')
                var grid = $("#GridDokumen").data("kendoGrid"),
                    dataItem = grid.dataItem($(e.target).closest("tr"));

                dataItem.set("Lengkap", this.checked);
            });

            $("#GridHistory").kendoGrid({
                dataSource: {
                    data: dsHistory,
                    batch: true,
                    schema: {
                        model: {
                            fields: {
                                Id : { type: "number"},
                                Nama : { type: "string"},
                                Jml : { type: "number"},
                                Warna : { type: "string"},
                                Stempel : { type: "boolean"},
                                Lengkap : { type: "boolean"},
                                KeteranganAdmin : { type: "string" },
                                KeteranganBilling : { type: "string"},
                                Tanggal : { type: "date"},
                            }
                        }
                    },
                    pageSize: 10,
                    pageable: true,
                    sortable: true,
                    sort: { field: "Id" },
                },
                filterable: kendoGridFilterable,
                sortable: true,
                reorderable: true,
                resizable: true,
                pageable: true,
                resizable: true,
                columns: [
                    { field: "Tanggal", title: "Tanggal", template: "#= kendo.toString(kendo.parseDate(Tanggal, 'yyyy-MM-dd hh:mm:ss'), 'dd/MM/yyyy HH:mm') #",},
                    { field: "Nama", title: "Nama"},
                    { field: "Jml", title: "Jumlah"},
                    { field: "Warna", title: "Warna"},
                    { field: "Stempel", title: "Stempel", template:"#= Stempel ? 'Ya' : 'Tidak'#"},
                    { field: "Lengkap", title: "Lengkap", template:"#= Lengkap ? 'Ya' : 'Tidak'#"},
                    { field: "KeteranganAdmin", title: "Keterangan Admin"},
                    { field: "KeteranganBilling", title: "Keterangan Billing"},
                ],
            }).data("kendoGrid");
        });

        $('#formsubmit').submit(function (e) {
            if(valBtn == "Terima" || valBtn == "Kirim")
            {
                dummyData = jQuery.grep(gridDokumen.dataSource.data(), function( DataModel ) {
                    return DataModel.Lengkap == false;
                });
/*                if(dummyData.length > 0)
                {
                    swal("","Dokumen belum legkap.","warning")
                    e.preventDefault();
                }*/
            }

            $('#strDokumen').val(JSON.stringify(gridDokumen.dataSource.data()));
        })
    </script>
}
